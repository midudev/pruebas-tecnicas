{
  "files.exclude": {

    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.svelte-kit": true,
    "**/node_modules": true,
  },

  "editor.codeActionsOnSave": {

    "source.fixAll.eslint": true,
  },

  "eslint.validate": [

    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "svelte",
  ],
}
