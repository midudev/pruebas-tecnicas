{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@common/*": ["src/common/*"],
      "@commonApi/*": ["src/common/api/*"],
      "@commonComponents/*": ["src/common/components/*"],
      "@commonContext/*": ["src/common/context/*"],
      "@commonHooks/*": ["src/common/hooks/*"],
      "@commonStyles/*": ["src/common/styles/*"],
      "@websiteApi/*": ["src/modules/BookLoverWebsite/api/*"],
      "@websiteViews/*": ["src/modules/BookLoverWebsite/presentation/views/*"],
      "@websiteComponents/*": ["src/modules/BookLoverWebsite/presentation/components/*"],
      "@websiteUtils/*": ["src/modules/BookLoverWebsite/utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
