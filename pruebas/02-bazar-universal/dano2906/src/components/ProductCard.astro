---
    import { Image } from "astro:assets";
    import AddCartButton from "@components/AddCartButton.jsx";
    const {product} = Astro.props
    const {id,title,description,price,category,rating} = product
---

<article class="flex flex-col items-start justify-start w-full h-auto p-3 rounded-lg shadow-lg gap-y-1 bg-gradient-to-br from-blue-300 via-pink-300 to-orange-300">
    <div class="flex items-center justify-center w-full">
        <Image src={"/placeholder-product-image.png"} alt={title} width={192} height={192} class="mx-auto rounded-lg" transition:name={`image--${id}`}/>
    </div>
    <a href=`/items/${id}` class="flex-1 hover:opacity-75">
        <div class="flex flex-col items-start justify-start">
            <h2 class="text-2xl font-bold font-tilt text-purple-950" transition:name={`title--${id}`}>{title}</h2>
            <p class="text-base font-tilt font-light text-purple-950 [text-wrap:balance]" transition:name={`desc--${id}`}>{description}</p>
            <span class="text-sm font-normal font-tilt text-purple-950" transition:name={`category--${id}`}>{category}</span>
            <span class="text-sm font-light font-tilt text-purple-950" transition:name={`price--${id}`}>Price: ${price}</span>
            <span class="text-sm font-light font-tilt text-purple-950" transition:name={`rating--${id}`}>Rating: {rating}/5</span>
        </div>
    </a>  
    <AddCartButton id={id} client:visible/>      
</article>